<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger">
                <%= msg %>
            </div>
        <% end %>
    <% end %>
    <div class="form-group">
        <%= f.label:title %>
        <%= f.text_field(:title,{:class => 'form-control'}) %>
    </div>
    <div class="form-group">
        <%= f.label:body %>
        <%= f.text_area(:body,{:class => 'form-control'}) %>
    </div>
    <p>
        <%= f.submit({:class => 'btn btn-defalt'}) %>
    </p>
<% end %>